<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SAAZ Application</title>
    <link rel="icon" href="@Url.Content("~/content/Logo.ico")" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        ul.nav li.dropdown:hover > ul.dropdown-menu {
            display: block;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SAAZ", "Homepage", "Role1", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Company<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/Role1/CompanyDetails" style="text-decoration:none">Add Details</a>
                            </li>
                            <li><a href="/Role1/ViewCompanyDetails">View</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Employee <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Role1/EmployeeDetails">Add Details</a></li>
                            <li><a href="/Role1/VEmployeeDetails">View</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Salary <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Role1/SalaryView">View</a></li>
                            <li><a href="~/Role1/SalaryDetails">Add Details</a></li>
                        </ul>
                    </li>
                    @*<li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Leave<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">View</a></li>
                                <li><a href="~/Leave/LeaveDetails">Add Details</a></li>
                            </ul>
                        </li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">DC<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Role1/Challan">Generate</a></li>
                            <li><a href="~/Role1/SelectChallan">View</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Invoice<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Role1/Invoice">Generate</a></li>
                            <li><a href="~/Role1/SelectInvoice">View</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Purchase Order<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="~/Role1/PO">Generate</a></li>
                            <li><a href="~/Role1/SelectPO">View</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/Admin/Signin"><span class="site-title"></span>Logout</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SAAZ Imaging All Rights Reserved</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
